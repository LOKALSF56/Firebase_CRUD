<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bginfo"
    android:gravity="center_vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/caridata"
        android:background="@drawable/borderbg"
        android:layout_marginTop="20dp"
        android:hint="Masukan Nama"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_gravity="start|center"
        android:padding="10dp"
        android:textColor="@color/black"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Cari"
        android:id="@+id/caribtn"
        android:textSize="25sp"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="20dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/borderbgtrans"
        android:padding="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/idsn"
            android:background="@drawable/borderbg"
            android:layout_marginTop="20dp"
            android:hint="No. KTP"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="start|center"
            android:padding="10dp"
            android:textColor="@color/black"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/carsn"
            android:background="@drawable/borderbg"
            android:layout_marginTop="20dp"
            android:hint="Kendaraan"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="start|center"
            android:padding="10dp"
            android:textColor="@color/black"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/idcarsn"
            android:background="@drawable/borderbg"
            android:layout_marginTop="20dp"
            android:hint="Plat Nomor"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="start|center"
            android:padding="10dp"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="kembali"
        android:id="@+id/backbtn"
        android:textSize="25sp"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="20dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_gravity="center"/>



</LinearLayout>